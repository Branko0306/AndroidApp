<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_foreground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="@dimen/card_elevation"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="@dimen/card_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/cover_height"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/slika"
                android:focusable="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_sadrzaj_naziv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/sadrzaj_naziv_left_padding"
                android:paddingEnd="@dimen/sadrzaj_naziv_right_padding"
                android:paddingTop="@dimen/sadrzaj_naziv_top_padding"
                android:textColor="@color/secondaryTextColor"
                android:textSize="@dimen/sadrzaj_naziv_text_size" />

            <TextView
                android:id="@+id/tv_sadrzaj_skraceni_opis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/sadrzaj_skraceni_opis_left_padding"
                android:paddingEnd="@dimen/sadrzaj_skraceni_opis_right_padding"
                android:paddingBottom="@dimen/sadrzaj_skraceni_opis_bottom_padding"
                android:textColor="@color/secondaryTextColor"
                android:textSize="@dimen/sadrzaj_skraceni_opis_text_size" />

            <LinearLayout
                android:id="@+id/buttonsBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <ImageView
                    android:id="@+id/actionButtonNavigateID"
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_height"
                    android:contentDescription="@string/prikazi_put"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onClickOtvoriMap"
                    android:gravity="start"
                    android:layout_margin="@dimen/icon_margin"
                    android:src="@drawable/ic_directions_walk_black_24px" />

                <ImageView
                    android:id="@+id/actionButtonOpenID"
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_height"
                    android:clickable="true"
                    android:contentDescription="@string/prikazi_u_pregledniku"
                    android:focusable="true"
                    android:onClick="onClickOtvoriURL"
                    android:gravity="start"
                    android:layout_margin="@dimen/icon_margin"
                    android:src="@drawable/ic_open_in_browser_black_24px" />

                <ImageView
                    android:id="@+id/actionCollapse"
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_height"
                    android:clickable="true"
                    android:contentDescription="@string/otvori_dodatno"
                    android:focusable="true"
                    android:forceHasOverlappingRendering="false"
                    android:gravity="end"
                    android:onClick="expandView"
                    android:layout_margin="@dimen/icon_margin"
                    android:src="@drawable/ic_expand_more_black_24px" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_sadrzaj_opis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secondaryTextColor"
                android:paddingBottom="@dimen/sadrzaj_opis_bottom_padding"
                android:paddingEnd="@dimen/sadrzaj_opis_right_padding"
                android:paddingStart="@dimen/sadrzaj_opis_left_padding"
                android:textSize="@dimen/sadrzaj_opis_text_size" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>